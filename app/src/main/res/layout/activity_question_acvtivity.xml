<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuestionAcvtivity">
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="رجوع"
                android:id="@+id/backmain"
                android:background="#00ACC1"
                style="@style/group"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="المجموعات"
           style="@style/group"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/A"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="المجموعه الاولى"
style="@style/group"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/B"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="المجموعه الثانيه"
style="@style/group"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/C"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text=" المجموعه الثالثه"
style="@style/group"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="#66BB6A"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/D"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="المجموعه الرابعه"
          style="@style/group"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/E"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text=" المجموعه الخامسه"
                style="@style/group"
                />
        </LinearLayout>
        //
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/F"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text=" المجموعه السادسه"
                style="@style/group"
                />
        </LinearLayout>
        //
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/G"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text=" المجموعه السابعه"
                style="@style/group"
                />
        </LinearLayout>
        //
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/H"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text=" المجموعه الثامنه"
                style="@style/group"
                />
        </LinearLayout>
        //
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/I"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text=" المجموعه التاسعه"
                style="@style/group"
                />
        </LinearLayout>
        //
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/J"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text=" المجموعه العاشره"
                style="@style/group"
                />
        </LinearLayout>
        //
    </LinearLayout>
   </RelativeLayout>
</ScrollView>